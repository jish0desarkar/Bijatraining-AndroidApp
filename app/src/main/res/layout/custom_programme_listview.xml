<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <TextView
        android:id="@+id/programme_listText"
        android:layout_width="351dp"
        android:layout_height="127dp"
        android:layout_marginStart="8dp"
        android:layout_marginTop="8dp"
        android:layout_marginEnd="8dp"
        android:layout_marginBottom="8dp"
        android:text="TextView"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.857"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.414" />

    <Button
        android:id="@+id/programme_details_button"
        style="@style/Widget.AppCompat.Button.Borderless"
        android:layout_width="110dp"
        android:layout_height="59dp"
        android:backgroundTint="@color/orange"
        android:shadowColor="@color/colorPrimary"
        android:text="Details"
        app:layout_constraintBottom_toBottomOf="@+id/programme_listText"
        app:layout_constraintEnd_toEndOf="@+id/programme_listText"
        app:layout_constraintHorizontal_bias="0.035"
        app:layout_constraintStart_toStartOf="@+id/programme_listText"
        app:layout_constraintTop_toTopOf="@+id/programme_listText"
        app:layout_constraintVertical_bias="0.838" />

    <Button
        android:id="@+id/programme_history_button"
        style="@style/Widget.AppCompat.Button.Borderless"
        android:layout_width="108dp"
        android:layout_height="59dp"
        android:backgroundTint="@color/orange"
        android:shadowColor="@color/colorPrimary"
        android:text="Hisotry"
        app:layout_constraintBottom_toBottomOf="@+id/programme_listText"
        app:layout_constraintEnd_toEndOf="@+id/programme_listText"
        app:layout_constraintHorizontal_bias="0.964"
        app:layout_constraintStart_toStartOf="@+id/programme_listText"
        app:layout_constraintTop_toTopOf="@+id/programme_listText"
        app:layout_constraintVertical_bias="0.852" />
</android.support.constraint.ConstraintLayout>