<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:descendantFocusability="blocksDescendants">

    <TextView
        android:id="@+id/hist_text"
        android:layout_width="337dp"
        android:layout_height="164dp"
        android:layout_marginStart="8dp"
        android:layout_marginTop="8dp"
        android:layout_marginEnd="8dp"
        android:layout_marginBottom="8dp"
        android:text="text"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.836"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.46" />

    <Button
        android:id="@+id/Details_button"
        style="@style/Widget.AppCompat.Button.Borderless"
        android:layout_width="108dp"
        android:layout_height="50dp"
        android:layout_marginEnd="8dp"
        android:layout_marginBottom="8dp"
        android:backgroundTint="@color/orange"
        android:shadowColor="@color/colorPrimary"
        android:text="Details"
        app:layout_constraintBottom_toBottomOf="@+id/hist_text"
        app:layout_constraintEnd_toEndOf="@+id/hist_text"
        app:layout_constraintHorizontal_bias="0.065"
        app:layout_constraintStart_toStartOf="@+id/hist_text"
        app:layout_constraintTop_toTopOf="@+id/hist_text"
        app:layout_constraintVertical_bias="1.0" />

    <Button
        android:id="@+id/status_btn"
        style="@style/Widget.AppCompat.Button.Borderless"
        android:layout_width="108dp"
        android:layout_height="44dp"
        android:layout_marginTop="8dp"
        android:layout_marginEnd="8dp"
        android:backgroundTint="@color/orange"
        android:shadowColor="@color/colorPrimary"
        android:text="Status"
        app:layout_constraintBottom_toBottomOf="@+id/hist_text"
        app:layout_constraintEnd_toEndOf="@+id/hist_text"
        app:layout_constraintHorizontal_bias="1.0"
        app:layout_constraintStart_toStartOf="@+id/hist_text"
        app:layout_constraintTop_toTopOf="@+id/hist_text"
        app:layout_constraintVertical_bias="0.917" />


</android.support.constraint.ConstraintLayout>